{
    "name": "PrettyBlockquote",
    "description": "Pretty replies including vertical bars using Blockquote inline CSS supported by other email clients.",
    "version": "1.4",
    "applications": {
        "gecko": {
            "id": "petty@chasegoodgold.com",
            "strict_min_version": "128.0"
        }
    },
    "icons": {
        "64": "icon/icon-64px.png",
        "32": "icon/icon-32px.png",
        "16": "icon/icon-16px.png"
    },
    "permissions": [
    	"compose",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "manifest_version": 2
}
