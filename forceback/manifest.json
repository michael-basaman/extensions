{
  "manifest_version": 3,
  "name": "ForceBack",
  "description": "ForcBack prevents websites from keeping you on their page when you press the back button.",
  "version": "1.0",
  "background": {
	"service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "forceback.html",
    "default_icon": "images/forceback_128.png"
  },
  "icons": {
    "16": "images/forceback_16.png",
    "48": "images/forceback_48.png",
    "128": "images/forceback_128.png"
  },
  "permissions": [
	"tabs",
	"history"
  ]
}